declare_args() {
  perl_path = "/usr/bin/perl"
}

template("perl") {
  action(target_name) {
    forward_variables_from(invoker, "*")

    script = "//build/gn_run_binary.py"

    args = []

    args += [
              perl_path,
              rebase_path(invoker.script),
            ] + invoker.args
  }
}
